{
    "lock": {
        "command": "$HOME/.config/i3lock/prepare_lockimage.sh && i3lock -i /tmp/lockscreen.png"
    },
    "hibernate": null,
    "suspend": {
        "command": "$HOME/.config/i3lock/prepare_lockimage.sh && sudo zzz"
    },
    "shutdown": {
        "name": "Shutdown",
        "description": "Shuts the system down",
        "aliases": ["Shutdown"],
        "command": "sudo shutdown -P now"
    },
    "restart": {
        "name": "Restart",
        "description": "Restarts the system",
        "aliases": ["Restart"],
        "command": "sudo shutdown -r now"
    },
    "bios": {
        "name": "[NOT SUPPORTED ON RUNIT] Firmware setup",
        "description": "Restart to system firmware (bios/uefi)",
        "icon": "bios",
        "aliases": ["bios", "firmware", "system", "uefi", "setup"],
        "command": ""
    },
    "logout": {
        "name": "Logout",
        "description": "Logout to switch user or de",
        "icon": "system-log-out",
        "aliases": ["Logout"],
        "command": "pkill -SIGKILL -u $(whoami)"
    }
}
